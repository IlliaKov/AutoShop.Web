@model IEnumerable<AutoShop.Models.CarDTO>

@{
    ViewData["Title"] = "GetList";
}

<h1>Category List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarDocuments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildYear);
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCarAvailable)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarDocuments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCarAvailable)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CarID">Edit</a> |

                <a asp-action="Delete" asp-route-id="@item.CarID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>



