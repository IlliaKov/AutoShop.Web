@model AutoShop.Models.CarDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cars</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarDocuments" class="control-label"></label>
                <input asp-for="CarDocuments" class="form-control" />
                <span asp-validation-for="CarDocuments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuildYear" class="control-label"></label>
                <input asp-for="BuildYear" class="form-control" />
                <span asp-validation-for="BuildYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsCarAvailable" class="control-label"></label>
                <input asp-for="IsCarAvailable" class="form-control" />
                <span asp-validation-for="IsCarAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

